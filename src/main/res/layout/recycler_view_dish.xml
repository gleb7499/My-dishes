<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dish_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="?attr/colorControlHighlight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewDish"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="centerCrop"
            android:contentDescription="@string/productsPhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.30"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.RoundedImageView"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/nameDish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="17sp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toEndOf="@id/imageViewDish"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Название очень вкусного и аппетитного блюда в две строки" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/nameMacrosDivider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/macrosGridLayout"
            app:layout_constraintEnd_toEndOf="@id/nameDish"
            app:layout_constraintStart_toStartOf="@id/nameDish"
            app:layout_constraintTop_toBottomOf="@id/nameDish"
            app:layout_constraintVertical_bias="1.0" />

        <GridLayout
            android:id="@+id/macrosGridLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:columnCount="4"
            android:rowCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/nameDish"
            app:layout_constraintStart_toStartOf="@id/nameDish"
            app:layout_constraintTop_toBottomOf="@id/nameMacrosDivider"
            app:layout_constraintVertical_bias="1.0">

            <!-- Row 1: Labels -->
            <TextView
                android:id="@+id/textViewCaloriesLabel"
                style="@style/MacroLabelTextView"
                android:contentDescription="Калории"
                android:text="К" />

            <TextView
                android:id="@+id/textViewProteinLabel"
                style="@style/MacroLabelTextView"
                android:contentDescription="Белки"
                android:text="Б" />

            <TextView
                android:id="@+id/textViewFatLabel"
                style="@style/MacroLabelTextView"
                android:contentDescription="Жиры"
                android:text="Ж" />

            <TextView
                android:id="@+id/textViewCarbLabel"
                style="@style/MacroLabelTextView"
                android:contentDescription="Углеводы"
                android:text="У" />

            <!-- Row 2: Values -->
            <TextView
                android:id="@+id/textViewCaloriesValue"
                style="@style/MacroValueTextView"
                tools:text="350" />

            <TextView
                android:id="@+id/textViewProteinValue"
                style="@style/MacroValueTextView"
                tools:text="20" />

            <TextView
                android:id="@+id/textViewFatValue"
                style="@style/MacroValueTextView"
                tools:text="15" />

            <TextView
                android:id="@+id/textViewCarbValue"
                style="@style/MacroValueTextView"
                tools:text="40" />
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>